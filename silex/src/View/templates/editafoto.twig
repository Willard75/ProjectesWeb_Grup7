            <table id="table3">
                <tr>
                    <td><label>Titular:</label></td>
                </tr>
                <tr>
                    <td><input type="text" name="titol" size="80" value="{{ titol }}"></td>
                </tr>
                <tr>
                    <td><label>Imagen:</label></td>
                </tr>
                <tr></tr><tr></tr><tr></tr>
                <tr id="im">
                    <td>
                        <img src="{{ asset( path, 'images') }}" height="200" alt="Image preview..." class="imag">
                    </td>
                </tr>
                <tr></tr><tr></tr>
                <tr>
                    <td>
                        <input type="file" id="but" name ="imatge" value = "" onchange="previewFile()">
